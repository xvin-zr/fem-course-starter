---
import Gh from "./github.astro";
import Tw from "./twitter.astro";
import Li from "./linkedin.astro";
import Bs from "./bluesky.astro";

const { twitter, linkedin, github, bluesky } = Astro.props;
---

<footer class='footer'>
  <ul class='socials'>
    {
      twitter ? (
        <li class='social'>
          <a href={`https://twitter.com/${twitter}`}>
            <Tw />
          </a>
        </li>
      ) : null
    }
    {
      bluesky ? (
        <li class='social'>
          <a href={`https://bsky.app/profile/${bluesky}`}>
            <Bs />
          </a>
        </li>
      ) : null
    }
    {
      github ? (
        <li class='social'>
          <a href={`https://github.com/${github}`}>
            <Gh />
          </a>
        </li>
      ) : null
    }
    {
      linkedin ? (
        <li class='social'>
          <a href={`https://linkedin.com/in/${linkedin}`}>
            <Li />
          </a>
        </li>
      ) : null
    }
    <li class='social'>
      <div class='terms'>
        <p>Content Licensed Under CC-BY-NC-4.0</p>
        <p>Code Samples and Exercises Licensed Under Apache 2.0</p>
        <p>
          Site Designed by{" "}
          <a href='https://www.alexdanielson.com/'>Alex Danielson</a>
        </p>
      </div>
    </li>
  </ul>
</footer>
